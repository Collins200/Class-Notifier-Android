<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.classnotifier">
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TextAppearance.AppCompat">
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:exported="true"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseNotesActivity"
            android:label="@string/title_activity_course_notes">

        </activity>
        <activity
            android:name=".EditCourseActivity"
            android:label="@string/title_activity_edit_course">

        </activity>
        <activity
            android:name=".EditMentorActivity"
            android:label="@string/title_activity_edit_mentor">

        </activity>
        <activity
            android:name=".MentorsListActivity"
            android:label="@string/title_activity_mentors_list">


        </activity>
        <activity
            android:name=".TermListActivity"
            android:label="@string/title_activity_term_list">

        </activity>
        <activity
            android:name=".EditAssessmentActivity"
            android:label="@string/title_activity_edit_assessment">

        </activity>
        <activity
            android:name=".EditTermActivity"
            android:label="@string/title_activity_edit_term">

        </activity>
        <activity
            android:name=".CourseDetailsActivity"
            android:label="@string/title_activity_course_details">

        </activity>
        <activity
            android:name=".TermDetailsActivity"
            android:label="@string/title_activity_term_details">

        </activity>
        <receiver android:name=".AlertReminder" />
    </application>

</manifest>